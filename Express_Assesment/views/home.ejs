<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Application</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq"
    crossorigin="anonymous"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector(".needs-validation");

        form.addEventListener("submit", function (event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.classList.add("was-validated");
        }, false);
    });
</script>

<body>
    <form action="/success" method="post" class="needs-validation" novalidate>
        <div class="container bg-light ">
            <h1 class="text-center py-3">Job Application</h1>

            <div class="row px-5">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required
                            class="form-control" pattern="^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[a-z]{2,}$"
                            title="Enter a valid email address" />
                        <div class="invalid-feedback">Please enter a valid email.</div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="mobile" class="form-label">Mobile:</label>
                        <input type="tel" class="form-control" id="mobile" name="mobile" placeholder="Enter your mobile"
                            required pattern="[0-9]{10}" title="Enter a 10-digit mobile number" />
                        <div class="invalid-feedback">Please enter a valid 10-digit mobile number.</div>

                    </div>
                </div>
            </div>
            <div class="row px-5">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="role" class="form-label">Role:</label>
                        <select id="role" name="role" class="form-control"
                            aria-describedby="validationServer04Feedback">
                            <option value="none">Choose...</option>
                            <option value="frontend" selected>Frontend</option>
                            <option value="backend">Backend</option>
                            <option value="fullstack">Fullstack</option>
                        </select>
                        <div id="validationServer04Feedback" class="invalid-feedback">
                            Please select a valid Role.
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="vacancy" class="form-label">Vacancy:</label>
                        <input type="number" class="form-control " id="vacancy" name="vacancy"
                            placeholder="number of vacancies" required aria-describedby="validationServer03Feedback" />
                        <div id="validationServer03Feedback" class="invalid-feedback">
                            Please enter a valid number of vacancies.
                        </div>
                    </div>
                </div>
            </div>
            <div class="row px-5">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="offer" class="form-label">Offer(CTC):</label>
                        <input type="number" class="form-control " id="offer" name="offer" placeholder="offer(CTC)"
                            required aria-describedby="validationServer03Feedback" />
                        <div id="validationServer03Feedback" class="invalid-feedback">
                            Please enter a valid offer.
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="experience" class="form-label">Relevant Experience (Years):</label>
                        <input type="number" class="form-control " id="experience" name="experience"
                            placeholder="relevant experience (years)" required
                            aria-describedby="validationServer03Feedback" />
                        <div id="validationServer03Feedback" class="invalid-feedback">
                            Please enter a valid experience.
                        </div>
                    </div>
                </div>
            </div>
            <div class="row px-5">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="skills" class="form-label">Skills:</label>
                        <textarea class="form-control" id="skills" name="skills" placeholder="skills" required
                            aria-describedby="validationServer03Feedback"></textarea>
                        <div id="validationServer03Feedback" class="invalid-feedback">
                            Please enter a valid skills.
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="address" class="form-label">Address:</label>
                        <textarea class="form-control " id="address" name="address" placeholder="address" required
                            aria-describedby="validationServer03Feedback"></textarea>
                        <div id="validationServer03Feedback" class="invalid-feedback">
                            Please enter a valid address.
                        </div>
                    </div>
                </div>
            </div>
            <div class="row px-5">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="date" class="form-label">Availability for Interview:</label>
                        <input type="date" class="form-control " id="date" name="date" required
                            aria-describedby="validationServer03Feedback" />
                        <div id="validationServer03Feedback" class="invalid-feedback">
                            Please enter a valid date.
                        </div>
                    </div>
                </div>
            </div>
            <div class="row px-5">
                <div class="col-md-12">
                    <div class="mb-2">
                        <button type="submit" class="btn btn-primary my-3 px-4">Submit</button>
                    </div>
                </div>
            </div>
    </form>
</body>

</html>