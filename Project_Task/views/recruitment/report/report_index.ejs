<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Job Posts</title>

  <!-- Bootstrap CDN -->
  <%- include('../../cdn.ejs') %>

  <style>
    body {
      background-color: #edf6f9;
      font-family: "Poppins", sans-serif;
    }

    .header {
      background-color: #006d77;
      text-align: center;
      color: white;
      padding: 0.5rem 2rem;
      border-radius: 0 0.5rem 0.5rem 0;
      font-size: 2rem;
      font-weight: bold;
      display: inline-block;
      margin-bottom: 2rem;
    }

    .avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin-right: 1.5rem;
      border: 3px solid #006d77;
    }

    .stat-card {
      background-color: #006c6c;
      color: white;
      /* max-width: 250px; */
      border-radius:0 1rem 0 1rem  ;
      padding: 1.5rem 1rem;
      text-align: center;
    }

    .stat-card h2 {
      font-size: 2.5rem;
      font-weight: bold;
    }

    .stat-card p {
      margin: 0;
      font-size: 1.2rem;
    }

    .section-title {
      font-size: 2rem;
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
      /* margin-left:4rem; */
      color: #006d77;
    }
  </style>
</head>

<body>
  <div class="container-fluid py-5">
    <!-- Header -->
    <div class="row mb-2">
      <div class="col-md-3 col-sm-4 header">Report</div>
      <div class="col-md-9 col-sm-8 d-flex justify-content-end">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="User" class="avatar" />
      </div>
    </div>

    <!-- JOB TEMPLATE START -->
    <!-- Repeat this block with different IDs and titles -->
    <div class="container ">

      <div class="section-title fw-bold ms-5">TODAY</div>
      <div class="row g-3 d-flex justify-content-center align-items-center">
        <div class="col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>24</h2>
            <p>Total Calls</p>
          </div>
        </div>
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>18</h2>
            <p>Total Connected Calls</p>
          </div>
        </div>
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>12</h2>
            <p>Total Scheduled Interviews</p>
          </div>
        </div>
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>08</h2>
            <p>Total Offers</p>
          </div>
        </div>
      </div>

      <!-- THIS MONTH Section -->
      <div class="section-title fw-bold ms-5">THIS MONTH</div>
      <div class="row g-3 d-flex justify-content-center align-items-center">
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>94</h2>
            <p>Total Calls</p>
          </div>
        </div>
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>78</h2>
            <p>Total Connected Calls</p>
          </div>
        </div>
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>52</h2>
            <p>Total Scheduled Interviews</p>
          </div>
        </div>
        <div class=" col-md-3" style="max-width: 250px;">
          <div class="stat-card">
            <h2>32</h2>
            <p>Total Offers</p>
          </div>
        </div>
      </div>
    </div>





    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Toggle Chevron Script -->
    <script>
      document.querySelectorAll(".chevron-btn").forEach((btn) => {
        const collapseId = btn.getAttribute("data-bs-target").substring(1)
        const icon = btn.querySelector("i")
        const collapseEl = document.getElementById(collapseId)

        collapseEl.addEventListener("show.bs.collapse", () => {
          icon.classList.remove("bi-chevron-down")
          icon.classList.add("bi-chevron-up")
        })

        collapseEl.addEventListener("hide.bs.collapse", () => {
          icon.classList.remove("bi-chevron-up")
          icon.classList.add("bi-chevron-down")
        })
      })
    </script>
</body>

</html>