<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Data</title>
    <%- include('cdn.ejs') %>
  </head>

  <body>
    <div class="container my-5">
      <h1 class="bg-dark text-center text-warning h2 p-2 mb-4">User Data</h1>
      <div class="table-responsive">
        <table
          class="table table-hover table-bordered text-center align-middle"
        >
          <thead class="table-dark">
            <tr>
              <th>Sr No</th>
              <th>User Name</th>
              <th>User Email</th>
              <th colspan="2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% data.map((val, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%- val.name %></td>
              <td><%- val.email %></td>
              <td onclick="return confirm('Are you sure?')">
                <a href="/delete/<%- val.id%>">
                  <i
                    class="fa fa-trash text-danger fw-bold"
                    style="cursor: pointer"
                  ></i
                ></a>
              </td>
              <td>
                <a href="/edit/<%- val.id%>">
                  <i
                    class="fa fa-edit text-primary fw-bold"
                    style="cursor: pointer"
                  ></i
                ></a>
              </td>

              <!-- <td>
                <a href="/delete?id=<%- val.id%>">
                  <i
                    class="fa fa-trash text-danger fw-bold"
                    style="cursor: pointer"
                  ></i
                ></a>
              </td> -->
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
