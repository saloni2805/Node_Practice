<body>

    <h1> Admin Panel </h1>
    <hr>
    <form action="/saveform" method="POST">


        <label for="">Enter Product name</label>
        <input type="text" name="pname" id="pname">
        <br><br>


        <label for="">Enter Product Category</label>
        <select name="pcategory" id="pcategory">

            <option value="None">select</option>
            <option value="Electronics">Electronics</option>
            <option value="Groceerry">Groceerry</option>
            <option value="Clothing">Clothing</option>
            <option value="Mens">Mens</option>
            <option value="Kids">Kids</option>
            <option value="Other">Other</option>

        </select>


        <br><br>

        <label for="">Enter Product price</label>
        <input type="text" name="pprice" id="pprice">

        <br><br>


        <label for="">Enter Product Quantity</label>
        <input type="number" name="pquantity" id="pquantity">

        <br><br>

