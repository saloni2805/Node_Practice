<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Data</title>
    <!-- Bootstrap CSS CDN -->
    <%- include("../views/cdn.ejs")%>
  </head>

  <body class="bg-light">
    <div class="container mt-5">
      <h1 class="mb-4 text-center">Student Data</h1>
      <hr />

      <div class="table-responsive">
        <table
          class="table table-bordered table-striped table-hover align-middle text-center"
        >
          <thead class="table-dark">
            <tr>
              <th>SR No</th>
              <th>ID</th>
              <th>Student Name</th>
              <th>Student Email</th>
              <th>Student Course</th>
              <th>Delete</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody>
            <% data.map((val, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%- val.id %></td>
              <td><%- val.name %></td>
              <td><%- val.email %></td>
              <td><%- val.course %></td>

              <td>
                <a
                  href="/delete/<%- val.id %>"
                  onclick="return confirm('Are you sure?')"
                >
                  <i
                    class="bi bi-trash fw-bold"
                    style="cursor: pointer; color: crimson"
                  ></i
                ></a>
              </td>

              <td>
                <a href="/edit/<%- val.id %>">
                  <i
                    class="bi bi-pen fw-bold"
                    style="cursor: pointer; color: blue"
                  ></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
